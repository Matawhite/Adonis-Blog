{% extends 'master' %}

{% block content %}
  <div class="posts-wrapper">
    {% for post in posts %}
      <div class="post">
        <h2><a href="post/{{post.id}}"> {{ post.title }} </a></h2>
        <p> {{ post.content | truncate(150) }} </p>
        {% else %}
          <h2> No posts found </h2>
      </div>
    {% endfor %}
    <a href="/post/create"><button class="btn btn-primary btn-block">Create a Post</button></a>
  </div>
{% endblock %}
